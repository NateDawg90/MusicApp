<h1><%= @band.name %></h1>
<h4>Albums</h4>

<ul>
  <% @band.albums.each do |album| %>
      <li><%= link_to album.name, album_url(album) %></li>
  <% end %>
</ul>

<h5>Links</h5>
<ul>
  <li><%= link_to "New Album", new_band_album_url(@band) %></li>
  <li><%= link_to "Edit #{@band.name}", edit_band_url(@band) %></li>
  <li><%= link_to "Delete #{@band.name}", band_url(@band), method: :delete %></li>
  <li><%= link_to "All bands", bands_url(@band) %></li>
</ul>
